<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rocoinfo.repository.auth.PermissionDao">
  <resultMap id="BaseResultMap" type="com.rocoinfo.entity.auth.Permission">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
    <result column="description" property="description"/>
    <result column="permission" property="permission"/>
    <result column="seq" property="seq"/>
    <result column="pid" property="pid"/>
    <result column="app_id" property="appId"/>
  </resultMap>
  <sql id="BaseColumn">
    id, name, description, permission, seq, pid, app_id
  </sql>
  <select id="getById" resultMap="BaseResultMap" parameterType="long">
    select
    <include refid="BaseColumn"/>
    from auth_permission
    where id = #{id}
  </select>
  <delete id="deleteById" parameterType="long">
    delete from auth_permission
    where id = #{id}
  </delete>
  <insert id="insert" parameterType="com.rocoinfo.entity.auth.Permission" useGeneratedKeys="true" keyProperty="id">
    insert into auth_permission
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        name,
      </if>
      <if test="description != null">
        description,
      </if>
      <if test="permission != null">
        permission,
      </if>
      <if test="seq != null">
        seq,
      </if>
      <if test="pid != null">
        pid,
      </if>
      <if test="appId != null">
        app_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name},
      </if>
      <if test="description != null">
        #{description},
      </if>
      <if test="permission != null">
        #{permission},
      </if>
      <if test="seq != null">
        #{seq},
      </if>
      <if test="pid != null">
        #{pid},
      </if>
      <if test="appId != null">
        #{appId},
      </if>
    </trim>
  </insert>
  <update id="update" parameterType="com.rocoinfo.entity.auth.Permission">
    update auth_permission
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="description != null">
        description = #{description},
      </if>
      <if test="permission != null">
        permission = #{permission},
      </if>
      <if test="seq != null">
        seq = #{seq},
      </if>
      <if test="pid != null">
        pid = #{pid},
      </if>
      <if test="appId != null">
        app_id = #{appId},
      </if>
    </set>
    where id = #{id}
  </update>

  <select id="search" resultMap="BaseResultMap">
    SELECT
    <include refid="BaseColumn"/>
    FROM auth_permission
    <include refid="searchWhere"/>
  </select>

  <sql id="searchWhere">
    <where>
      <if test="appId">
        AND app_id =#{appId}
      </if>
      <if test="keyword">
        AND name LIKE CONCAT('%',#{keyword},'%')
      </if>
    </where>
  </sql>

  <select id="findByAppId" resultMap="BaseResultMap">
    SELECT
    <include refid="BaseColumn"/>
    FROM auth_permission WHERE app_id =#{appId}
  </select>
</mapper>